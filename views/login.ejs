
<% include ./partials/header %>
<div class="row">
    <h1 class="login-header">Login</h1>
    <div class="login-form">
        <form action="/login" method="post">
            <div class="form-group">
                <label class="control-label" for="username">Username:</label>
                <input class="form-control input" id="username" type="text" name="username" placeholder="username">
            </div>
            <div class="form-group">
                <label class="label-control" for="password">Password:</label>
                <input class="form-control input" id="password" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <label class="label-control" for="admin">Administrator:</label>
                <input  class="form-control input" type="text" name="admin" placeholder="admin code">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Login</button>
            </div>
        </form>
        <a href="/trails">Go Back</a>
    </div>
</div>
<% include ./partials/footer %>